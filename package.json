{
  "name": "pause",
  "version": "2.0.0-rc.4",
  "description": "A minimal opiniated youtube video player you can keep always on top",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "release": "build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/baobabcoder/pause",
  "keywords": [
    "Pause",
    "Electron",
    "video",
    "player",
    "youtube"
  ],
  "author": "BÃ©ranger Campardou",
  "email": "b.campardou@gmail.com",
  "url:": "https://github.com/baobabcoder/pause",
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "^20.15.1",
    "electron-is-dev": "^0.3.0"
  },
  "dependencies": {
    "electron-updater": "^3.1.2",
    "video.js": "^7.1.0",
    "videojs-youtube": "^2.6.0",
    "youtube-search": "^1.1.1"
  },
  "build": {
    "appId": "com.electron.pause",
    "productName": "Pause",
    "publish": [
      {
        "provider": "github",
        "owner": "BaobabCoder",
        "repo": "pause",
        "vPrefixedTagName": true
      }
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": "dmg",
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
